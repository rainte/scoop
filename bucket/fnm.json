{
    "version": "1.35.1",
    "description": "Node 版本管理器",
    "homepage": "https://github.com/Schniz/fnm",
    "url": "https://hub.gitmirror.com/https://github.com/Schniz/fnm/releases/download/v1.35.1/fnm-windows.zip",
    "hash": "f083e7256c24f359d2101934426c87e3066831a40303ebe6e538cea917a0f184",
    "bin": "fnm.exe",
    "env_set": {
        "FNM_NODE_DIST_MIRROR": "https://npmmirror.com/mirrors/node"
    },
    "post_install": [
        "$user = \"$env:USERPROFILE\\Documents\\WindowsPowerShell\"",
        "New-Item -ItemType Directory -Force -Path \"$user\"",
        "Add-Content -Path \"$user\\Microsoft.PowerShell_profile.ps1\" -Value 'fnm env --use-on-cd | Out-String | Invoke-Expression'",
        ". $PROFILE",
        "fnm install 20",
        "npm config set registry https://registry.npm.taobao.org",
        "npm install -g yarn"
    ],
    "uninstaller": {
        "script": [
            "[Environment]::SetEnvironmentVariable('FNM_NODE_DIST_MIRROR', '', 'User')",
            "fnm uninstall 20",
            "$user = \"$env:USERPROFILE\\Documents\\WindowsPowerShell\"",
            "(Get-Content \"$user\\Microsoft.PowerShell_profile.ps1\" | Where-Object {$_ -notmatch 'fnm env --use-on-cd | Out-String | Invoke-Expression'}) | Out-File \"$user\\Microsoft.PowerShell_profile.ps1\""
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "url": "https://hub.gitmirror.com/https://github.com/Schniz/fnm/releases/download/v$version/fnm-windows.zip"
    }
}
