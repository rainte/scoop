{
    "version": "1.35.1",
    "description": "Node 版本管理器",
    "homepage": "https://github.com/Schniz/fnm",
    "url": "https://hub.gitmirror.com/https://github.com/Schniz/fnm/releases/download/v1.35.1/fnm-windows.zip",
    "hash": "f083e7256c24f359d2101934426c87e3066831a40303ebe6e538cea917a0f184",
    "bin": "fnm.exe",
    "env_set": {
        "FNM_NODE_DIST_MIRROR": "https://mirrors.aliyun.com/nodejs-release"
    },
    "post_install": [
        "   info '0000'",
        "if (!(Test-Path $PROFILE)) {",
        "    New-Item $PROFILE -ItemType File -Force",
        "}",
        "   info '11111'",
        "Add-Content -Path $PROFILE -Value 'fnm env --use-on-cd | Out-String | Invoke-Expression'",
        "   info '22222'",
        ". $PROFILE",
        "   info '33333'",
        "fnm install 20",
        "   info '44444'",
        "npm config set registry https://registry.npmmirror.com",
        "npm install -g pnpm"
    ],
    "uninstaller": {
        "script": [
            "(Get-Content $PROFILE | Where-Object {$_ -notmatch 'fnm env --use-on-cd | Out-String | Invoke-Expression'}) | Out-File $PROFILE",
            "[Environment]::SetEnvironmentVariable('FNM_NODE_DIST_MIRROR', '', 'User')",
            "fnm uninstall 20"
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "url": "https://hub.gitmirror.com/https://github.com/Schniz/fnm/releases/download/v$version/fnm-windows.zip"
    }
}
